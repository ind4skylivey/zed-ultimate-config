{
  // Editor Appearance
  // =========================
  "ui_font_family": "Hack",
  "buffer_font_family": "MesloLGL Nerd Font",
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  // Theme Overrides
  // =========================
  "theme_overrides": {
    "Catppuccin Iced Latte (Blur) [Light]": {
      "syntax": {
        "comment": {
          "font_style": "italic",
          "color": "#802200"
        },
        "comment.doc": {
          "font_style": "italic",
          "color": "#802200"
        },
        "keyword": {
          "font_weight": 700,
          "color": "#9400D3"
        },
        "keyword.control": {
          "font_weight": 700,
          "color": "#D91E18"
        },
        "string": {
          "font_weight": 500,
          "color": "#006600"
        },
        "string.special": {
          "color": "#0D5C6F"
        },
        "function": {
          "font_weight": 600,
          "color": "#2B4F8C"
        },
        "function.method": {
          "font_weight": 600,
          "color": "#0D5C6F"
        },
        "variable": {
          "color": "#2F2F2F"
        },
        "variable.special": {
          "font_weight": 600,
          "color": "#D91E18"
        },
        "type": {
          "font_weight": 600,
          "color": "#6B4D11"
        },
        "constant": {
          "font_weight": 700,
          "color": "#A85D00"
        },
        "operator": {
          "font_weight": 600,
          "color": "#0D5C6F"
        },
        "punctuation": {
          "color": "#4A4A4A"
        },
        "punctuation.bracket": {
          "font_weight": 500,
          "color": "#4A4A4A"
        },
        "punctuation.delimiter": {
          "font_weight": 500,
          "color": "#2F2F2F"
        },
        "number": {
          "font_weight": 700,
          "color": "#A85D00"
        },
        "property": {
          "color": "#2B4F8C"
        },
        "tag": {
          "font_weight": 600,
          "color": "#D91E18"
        },
        "attribute": {
          "color": "#6B4D11"
        },
        "namespace": {
          "font_style": "italic",
          "font_weight": 500,
          "color": "#7B1FA2"
        }
      }
    }
  },

  "icon_theme": "JetBrains Icons Light",

  // =========================
  // AI Coding Agents (Optional)
  // =========================
  // Uncomment after installing Droid CLI: https://factory.sh
