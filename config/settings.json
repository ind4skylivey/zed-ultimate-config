  // =========================
  // Terminal & Shell
  // =========================
  "terminal": {
    "shell": {
      "program": "/usr/bin/zsh"
    },
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zed --wait"
    }
  },

  // =========================
  // Tabs & Navigation
  // =========================
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "scrollbar": {
    "show": "always",
    "git_diff": true
  },

  // =========================
  // File Finder & Search
  // =========================
  "file_scan_exclusions": [
    "**/.git",
    "**/node_modules",
    "**/vendor",
    "**/target",
    "**/__pycache__",
    "**/venv",
    "**/.venv",
    "**/loot",
    "**/dumps"
  ],
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  // =========================
  // Project Panel & Outline
  // =========================
  "project_panel": {
    "button": true,
    "default_width": 280,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "dock": "right",
    "default_width": 300
  },

  // =========================
  // Multi-cursor & Selection
  // =========================
  "multi_cursor_modifier": "alt",
  "cursor_blink": true,
  "relative_line_numbers": false,
  "show_edit_predictions": true,

  // =========================
  // Code Display
  // =========================
  "show_whitespaces": "selection",
  "soft_wrap": "none",
  "preferred_line_length": 100,
  "seed_search_query_from_cursor": "always",
  "linked_edits": true,
  "show_call_status_icon": true,
  "confirm_quit": false,

  // =========================
  // Diagnostics
  // =========================
  "diagnostics": {
    "include_warnings": true,
    "show_warning_count": true
  },
  "edit_predictions": {
    "disabled_globs": [
      ".env",
      ".env.*",
      "**/.git/**",
      "**/loot/**"
    ]
  },

  // =========================
  // File Types
  // =========================
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "Shell Script": ["*.sh", "*.bash", "*.zsh"],
    "Makefile": ["Makefile", "makefile", "*.mk"]
  },

  // =========================
  // Git Integration
  // =========================
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    },
    "gutter_debounce": 100,
    "git_status": true,
    "hunk_actions": true
  },
  "journal": {
    "path": "~/.local/share/zed",
    "hour_format": "hour24"
  },

  // =========================
  // Language-Specific Settings
  // =========================
  "languages": {
    "Bash": {
      "tab_size": 2,
      "hard_tabs": false,
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "2", "-"]
        }
      },
      "format_on_save": "on"
    },
    "Shell Script": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "2", "-"]
        }
      },
      "format_on_save": "on"
    },
    "PHP": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "cat > {buffer_path} && ./vendor/bin/pint --quiet {buffer_path} && cat {buffer_path}"
          ]
        }
      },
      "format_on_save": "on",
      "enable_language_server": true
    },
    "Blade": {
      "tab_size": 4,
      "format_on_save": "off",
      "enable_language_server": true
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "sh",
          "arguments": [
            "-c",
            "black --skip-string-normalization - 2>/dev/null || python3 -m black --skip-string-normalization - 2>/dev/null || cat"
          ]
        }
      },
      "format_on_save": "on",
      "enable_language_server": true,
      "tab_size": 4
    },
    // Rust
    "Rust": {
      "formatter": {
        "external": {
          "command": "rustfmt",
          "arguments": []
        }
      },
      "format_on_save": "on"
    }
  },

  // =========================
  // LSP (Language Server Protocol)
  // =========================
  "lsp": {
    "intelephense": {
      "binary": {
        "path": "/home/il1v3y/.local/bin/intelephense",
        "arguments": ["--stdio"]
      },
      "settings": {
        "intelephense": {
          "files": {
            "maxSize": 5000000
          },
          "completion": {
            "insertUseDeclaration": true,
            "fullyQualifyGlobalConstantsAndFunctions": false
          },
          "format": {
            "enable": false
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy" // rust-analyzer.check.command (default: "check")
        },
        "imports": {
          "merge": { "glob": false },
          "granularity": {
            "enforce": true,
            "group": "module"
          }
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  },

  // =========================
  // Privacy & Telemetry
  // =========================
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },

  // =========================
  // Auto-Install Extensions
  // =========================
  "auto_install_extensions": {
    "php": true,
    "blade": true,
    "tailwindcss": true,
    "env": true
  }
}
