[
  {
    "context": "Editor",
    "bindings": {
      "cmd-alt-l": "editor::Format",
      "cmd-shift-r": "editor::Rename",
      "cmd-d": "editor::DuplicateLineDown",
      "cmd-shift-a": "editor::SelectAll",
      "cmd-/": "editor::ToggleComments",
      "cmd-p": "file_finder::Toggle",
      "alt-up": "editor::MoveLineUp",
      "alt-down": "editor::MoveLineDown",
      "cmd-k cmd-i": "editor::Hover",
      "f12": "editor::GoToDefinition",
      "shift-f12": "editor::GoToTypeDefinition",
      "cmd-shift-o": "outline::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-1": "workspace::ToggleLeftDock",
      "cmd-2": "workspace::ToggleRightDock",
      "cmd-r": ["task::Spawn", { "task_name": "r/python" }],
      "cmd-alt-r": ["task::Spawn", { "task_name": "r/rust" }],
      "cmd-t": "workspace::ToggleBottomDock",
      "cmd-shift-t": "workspace::NewTerminal",
      // AI Coding Agent (Optional - requires Droid CLI)
      // Uncomment after installing: https://factory.sh
      // "cmd-shift-d": ["task::Spawn", { "task_name": "droid/analyze" }],
      // "cmd-alt-d": ["task::Spawn", { "task_name": "droid/review" }],
      // "cmd-ctrl-d": ["task::Spawn", { "task_name": "droid/fix" }],
      "cmd-shift-s": ["task::Spawn", { "task_name": "laravel/serve" }],
      "cmd-shift-m": ["task::Spawn", { "task_name": "laravel/migrate" }],
      "cmd-shift-p": ["task::Spawn", { "task_name": "php/run" }],
      "cmd-shift-i": "editor::Format",
      "cmd-alt-t": ["task::Spawn", { "task_name": "laravel/test" }],
      "cmd-alt-i": ["task::Spawn", { "task_name": "laravel/tinker" }],
      "cmd-shift-y": ["task::Spawn", { "task_name": "python/test" }],
      "cmd-alt-y": ["task::Spawn", { "task_name": "python/test-file" }],
      "cmd-ctrl-l": ["task::Spawn", { "task_name": "python/lint-ruff" }],
      "cmd-ctrl-f": ["task::Spawn", { "task_name": "python/format-black" }],
      "cmd-shift-b": ["task::Spawn", { "task_name": "rust/build" }],
      "cmd-shift-r": ["task::Spawn", { "task_name": "rust/run" }],
      "cmd-alt-b": ["task::Spawn", { "task_name": "rust/test" }],
      "cmd-ctrl-c": ["task::Spawn", { "task_name": "rust/clippy" }],
      "cmd-ctrl-k": ["task::Spawn", { "task_name": "rust/check" }],
      "cmd-alt-o": ["task::Spawn", { "task_name": "rust/doc" }],
      "cmd-shift-h": ["task::Spawn", { "task_name": "binary/hexdump-head" }],
      "cmd-shift-x": ["task::Spawn", { "task_name": "binary/strings" }],
      "cmd-alt-g": ["task::Spawn", { "task_name": "debug/gdb-start" }],
      "cmd-alt-h": ["task::Spawn", { "task_name": "binary/hash-all" }],
      "cmd-ctrl-o": ["task::Spawn", { "task_name": "binary/objdump-disasm" }],
      "cmd-shift-l": ["task::Spawn", { "task_name": "security/ports-local" }],
      "cmd-shift-n": ["task::Spawn", { "task_name": "security/network-connections" }],
      "cmd-shift-g": ["task::Spawn", { "task_name": "git/status" }],
      "cmd-alt-shift-g": ["task::Spawn", { "task_name": "git/log-graph" }]
    }
  }
]
